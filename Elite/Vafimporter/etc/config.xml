<?xml version="1.0"?>

<config>
    <modules>
        <Elite_Vaf>
            <version>1.23</version>
        </Elite_Vaf>
    </modules>
    <global>
        <blocks>
            <adminhtml>
                <rewrite>
                    <vafimporter_definitions>Elite_Vafimporter_Adminhtml_Block_Definitions_Import</vafimporter_definitions>
                    <vafimporter_definitionsexport>Elite_Vafimporter_Adminhtml_Block_Definitionsexport</vafimporter_definitionsexport>
                    <vafimporter_Fitments>Elite_Vafimporter_Adminhtml_Block_Fitments</vafimporter_Fitments>
                    <vafimporter_Fitmentsexport>Elite_Vafimporter_Adminhtml_Block_Fitmentsexport</vafimporter_Fitmentsexport>
                    <vafimporter_Fitmentsadvanced>Elite_Vafimporter_Adminhtml_Block_FitmentsAdvanced</vafimporter_Fitmentsadvanced>
                </rewrite>
            </adminhtml> 
        </blocks>
     </global>
     
     <adminhtml>
        <menu>
            <vaf>
                <children>
                    <vehicleslist>
                        <children>
                            <import translate="title">
                                <title>Import</title>
                                <action>adminhtml/vafdefinitionsimporter/index</action>
                            </import>
                            <export translate="title">
                                <title>Export</title>
                                <action>adminhtml/vafimporter/definitionsexport</action>
                            </export>
                        </children>
                    </vehicleslist>
                    <Fitments translate="title">
                        <title>Product Applications</title>
                        <children>
                            <import translate="title">
                                <title>Import</title>
                                <action>adminhtml/vafFitmentsimporter/index</action>
                            </import>
                            <export translate="title">
                                <title>Export</title>
                                <action>adminhtml/vafimporter/Fitmentsexport</action>
                            </export>
                        </children>
                        <sort_order>20</sort_order>
                    </Fitments>
                </children>
            </vaf>
        </menu>
        
        <acl>
            <resources>
                <admin>
                    <children>
                        <vaf>
                            <children>
                                <vehicleslist>
                                    <children>
                                        <import translate="title">
                                            <title>Import</title>
                                            <action>adminhtml/vafdefinitionsimporter/index</action>
                                        </import>
                                        <export translate="title">
                                            <title>Export</title>
                                            <action>adminhtml/vafimporter/definitionsexport</action>
                                        </export>
                                    </children>
                                </vehicleslist>
                                <Fitments translate="title">
                                    <title>Product Applications</title>
                                    <children>
                                        <import translate="title">
                                            <title>Import</title>
                                            <action>adminhtml/vafFitmentsimporter/index</action>
                                        </import>
                                        <export translate="title">
                                            <title>Export</title>
                                            <action>adminhtml/vafimporter/Fitmentsexport</action>
                                        </export>
                                    </children>
                                    <sort_order>20</sort_order>
                                </Fitments>
                            </children>
                       </vaf>
                   </children>
               </admin>
           </resources>
        </acl>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <frontName><![CDATA[admin]]></frontName>
                    
                    <modules>
                      <Elite_Vafimporter_Admin before="Mage_Adminhtml">Elite_Vafimporter_Admin</Elite_Vafimporter_Admin>
                    </modules>
                </args>
            </adminhtml>
        </routers>
     </admin>

</config>
